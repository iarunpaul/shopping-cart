<% @order_items.each do |order_item| %>
  <tr>
    <td><%= order_item.product.title %></td>
    <td><%= order_item.unit_price %></td>
    <td><%= link_to 'Show', shop_path(order_item.product) %></td>
    <%= form_with model: @order_item, url: order_item, method: :put, local: false, id: 'update-form' do |form| %>
    <%# form.hidden_field :product_id, value: order_item.product.id %>
    <td><%= form.number_field :quantity, value: order_item.quantity %></td>
    <td><%= form.submit "Update Cart" %></td>
    <td id="remove-<%= order_item.id %>"><%= link_to "remove", order_item, method: :delete, remote: true %></td>
    <% end %>
  </tr>
<% end %>