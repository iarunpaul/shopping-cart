<section class="section">
  <div class="container">
    <h1 class="title has-text-centered">Your Cart</h1>
    <div class="columns is-centered">
      <div class="column is-two-thirds">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Unit price</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <%= render 'order_items' %>
          </tbody>
        </table>
      </div>

    </div>
    <div class="columns is-centered">
        <div class="column is-two-thirds">
          <div id="card-link"><%= render 'order_items/card_link' %></div>
        </div>
      </div>
  </div>
</section>
